[*]
charset=utf-8
end_of_line=lf
trim_trailing_whitespace=true
insert_final_newline=true

[{.prettierrc,.babelrc,.stylelintrc,*.json}]
indent_style=space
indent_size=4

[{*.js,*.jsx,.babelrc,*.json}]
indent_style=space
indent_size=2

[{*.css,*.scss}]
indent_style=space
indent_size=4

[{*.yml,*.yaml}]
indent_style=space
indent_size=4
